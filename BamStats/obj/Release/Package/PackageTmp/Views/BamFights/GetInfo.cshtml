@model BamStats.ViewModels.BamInfoVM

@{
    ViewBag.Title = "New Fight";
}
<link href="~/Content/Site.css" rel="stylesheet" />
<h2>New Fight</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>Choose the contenders</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
            <span style="background-color: #bfefff">
                @Html.LabelFor(model => model.Defender, "Defender (Blue)", htmlAttributes: new { @class = "control-label col-md-2" })
            </span>
            <div class="col-md-10">
                @Html.DropDownList("Defender", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Defender, "", new { @class = "text-danger" })
            </div>
        </div>

		<div class="form-group">
            <span style="background-color: #ffb6c1">
			    @Html.LabelFor(model => model.Attacker, "Attacker (Red)", htmlAttributes: new { @class = "control-label col-md-2" })
            </span>
			<div class="col-md-10">
				@Html.DropDownList("Attacker", null, htmlAttributes: new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.Attacker, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="See stats" class="btn btn-default" />
			</div>
		</div>
	</div>
}
